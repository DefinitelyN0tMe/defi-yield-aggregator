# =============================================================================
# Frontend Environment Variables
# =============================================================================
# Copy this file to .env.local and update values as needed
# NEVER commit .env.local to version control

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------

# API base path (defaults to /api/v1)
VITE_API_BASE=/api/v1

# Use mock data instead of real API (set to 'false' to use real backend)
# When true, the app works standalone without backend services
VITE_USE_MOCK_DATA=true

# -----------------------------------------------------------------------------
# WebSocket Configuration
# -----------------------------------------------------------------------------

# WebSocket base URL for real-time updates
# Only needed when USE_MOCK_DATA is false
VITE_WS_BASE=ws://localhost:8080

# -----------------------------------------------------------------------------
# Optional: Direct API URL (for different backend host)
# -----------------------------------------------------------------------------

# If your API is hosted on a different domain, uncomment and set:
# VITE_API_URL=http://localhost:3000
